<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#8c8f91"></solid>
            <corners
                android:radius="10dp"></corners>
        </shape>
    </item>
    <!-- White Top color -->
    <item android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#8c8f91"></solid>
            <corners
                android:radius="10dp"></corners>
        </shape>
    </item>
</layer-list>